<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".ui.MainActivity">

    <Button
            android:id="@+id/bn_slack_work"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/button_bottom_margin"
            android:onClick="onSlackWorkClicked"
            android:text="@string/slack_work"
            android:textColor="@android:color/white"
            android:background="@drawable/button_custom"/>

    <Button
            android:id="@+id/bn_demo_cancel_work"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/button_bottom_margin"
            android:onClick="onDemoCancelWorkClicked"
            android:text="@string/demo_cancel_work"
            android:textColor="@android:color/white"
            android:background="@drawable/button_custom"/>

    <Button
            android:id="@+id/bn_demo_chain_delays"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/button_bottom_margin"
            android:onClick="onDemoChainsClicked"
            android:text="@string/demo_chains"
            android:textColor="@android:color/white"
            android:background="@drawable/button_custom"/>

</LinearLayout>